{
  "name": "publish",
  "version": "1.0.0",
  "description": "DADI Publish",
  "main": "index.js",
  "scripts": {
    "build": "webpack --progress",
    "profile": "webpack --progress --profile --json > stats.json",
    "build-docs": "rm -rf docs/components/* && react-docgen --exclude ['/^(ConfigSchema$)/g'] frontend/components | node scripts/build-docs/build-docs.js docs/components; rm -rf docs/containers/* && react-docgen --exclude ['/^(ConfigSchema$)/g'] frontend/containers | node scripts/build-docs/build-docs.js docs/containers; cat component-map.json | node scripts/build-component-tree/build-tree.js docs/component-architecture.md",
    "create-component": "node scripts/create-component/create-component.js",
    "create-user": "node scripts/create-user/create-user.js",
    "api-install": "node scripts/api-install/api-install.js",
    "init": "validate-commit-msg",
    "lint": "eslint frontend && standard --fix",
    "prebuild": "mkdirp build",
    "prepublish": "npm run snyk-protect",
    "prepush": "npm run build-docs",
    "precommit": "npm run lint",
    "snyk-protect": "snyk protect",
    "start": "NODE_ENV=development node index.js",
    "test": "npm-run-all test-all lint",
    "test-all": "jest && node scripts/coverage/coverage.js",
    "watch": "NODE_ENV=development npm-run-all --parallel watch:server watch:build",
    "watch:build": "webpack --watch",
    "watch:server": "nodemon \"./index.js\" --watch \"./app\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dadi/publish.git"
  },
  "keywords": [
    "DADI",
    "Publish",
    "Publishing"
  ],
  "author": "DADI",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dadi/publish/issues"
  },
  "engines": {
    "node": ">=4.7",
    "npm": ">=3.0"
  },
  "homepage": "https://github.com/dadi/publish#readme",
  "dependencies": {
    "@dadi/api-wrapper": "^1.4.0",
    "@dadi/api-wrapper-core": "^1.6.0",
    "@dadi/logger": "^1.1.4",
    "@dadi/passport": "^1.2.0",
    "aws-sdk": "^2.19.0",
    "connect-flash": "^0.1.1",
    "convict": "^1.5.0",
    "cookie-session": "^2.0.0-alpha.2",
    "history": "^4.5.1",
    "md5": "^2.2.1",
    "mkdirp": "^0.5.1",
    "passport-local": "^1.0.0",
    "passport-restify": "^1.0.1",
    "passport-strategy": "^1.0.0",
    "path": "^0.12.7",
    "request-promise": "^4.1.1",
    "restify": "^4.3.0",
    "restify-cookies": "^0.2.2",
    "restify-errors": "^4.3.0",
    "snyk": "^1.25.0",
    "socketcluster-server": "^5.3.0",
    "ws": "2.0.0"
  },
  "devDependencies": {
    "archy": "^1.0.0",
    "autoprefixer": "^6.7.3",
    "babel-eslint": "^7.2.0",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-minify-mangle-names": "^0.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-es2015-template-literals": "^6.22.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.18.0",
    "babili": "^0.1.2",
    "babili-webpack-plugin": "^0.1.1",
    "chai": "^3.5.0",
    "component-tree-webpack-plugin": "^1.0.0",
    "css-loader": "^0.26.0",
    "eslint": "^3.18.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "fecha": "^2.3.0",
    "file-loader": "^0.9.0",
    "file-size": "^1.0.0",
    "fs": "0.0.1-security",
    "husky": "^0.13.3",
    "identity-obj-proxy": "^3.0.0",
    "inquirer": "^3.0.6",
    "istanbul-cobertura-badger": "^1.3.0",
    "jest": "^19.0.2",
    "json-loader": "^0.5.4",
    "mkdirp": "^0.5.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "normalize.css": "^5.0.0",
    "npm-run-all": "^3.1.2",
    "on-build-webpack": "^0.1.0",
    "postcss": "^5.2.14",
    "postcss-custom-media": "^5.0.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-loader": "^1.3.0",
    "pre-build-webpack": "^0.1.0",
    "preact": "^8.1.0",
    "preact-compat": "^3.0.0",
    "preact-jsx-chai": "^2.2.1",
    "preact-redux": "^1.2.0",
    "preact-render-to-string": "^3.6.0",
    "preact-router": "^2.5.1",
    "preact-router-redux": "^4.1.0",
    "proptypes": "^0.14.3",
    "react-docgen": "github:eduardoboucas/react-docgen",
    "react-test-renderer": "^15.5.4",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "socketcluster-client": "^5.3.0",
    "standard": "^8.6.0",
    "style-loader": "^0.13.1",
    "unfetch": "^2.1.1",
    "url-loader": "^0.5.7",
    "validate-commit-msg": "^2.11.1",
    "validator": "^7.0.0",
    "webpack": "^2.3.3"
  },
  "standard": {
    "globals": [
      "paths"
    ],
    "fix": true,
    "ignore": [
      "build",
      ".wallet",
      "config",
      "docs",
      "public",
      "test",
      "frontend"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/frontend/**/*.{js,jsx}",
      "**/app/**/*.{js}"
    ],
    "coverageReporters": [
      "cobertura"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^components/(.*)": "<rootDir>/frontend/components/$1",
      "^lib/(.*)": "<rootDir>/frontend/lib/$1",
      "\\.css$": "identity-obj-proxy",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "setupFiles": [
      "./test/jestSetup.js"
    ],
    "testMatch": [
      "**/frontend/**/*.test.jsx",
      "**/test/**/*.test.js"
    ]
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "snyk": true
}
